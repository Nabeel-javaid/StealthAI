modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Coding Assistant"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Keyboard Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Debug Mode"

[[workflows.workflow]]
name = "Coding Assistant"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Keyboard Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_keyboard.py"

[[workflows.workflow]]
name = "API Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_api.py"

[[workflows.workflow]]
name = "Debug Mode"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python debug_mode.py"

[deployment]
run = ["sh", "-c", "python main.py"]
